<?xml version="1.0" encoding="UTF-8" ?>

<odoo>
    <data>

         <report id="brothers_invoice_print_menu"
                model="account.move"
                string="brothers Invoice With Header"
                report_type="qweb-pdf"
                name="brothers_invoice_print.brothers_invoice_template"
                file="brothers_invoice_print.brothers_invoice_template"
                print_report_name = "(('brothers Invoice '+ object.name or 'brothers Print').replace('/','')+'.pdf')"/>

                <record id="paperformat_brothers_invoice_print_with_header" model="report.paperformat">
            <field name="name">Brothers INVOICE PRINT</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">60</field>
            <field name="margin_bottom">10</field>
            <field name="margin_left">4</field>
            <field name="margin_right">4</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">60</field>
            <field name="dpi">90</field>
        </record>


        <record id="brothers_invoice_print_menu" model="ir.actions.report">
            <field name="paperformat_id" ref="brothers_invoice_print.paperformat_brothers_invoice_print_with_header"/>
        </record>


